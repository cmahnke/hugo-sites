<script>
//cookies  
function setcookie(cookieName,cookieValue,cookieTime) {
    var today = new Date();
    var expire = new Date();
    expire.setTime(today.getTime() +  cookieTime * 24 * 60 * 60 * 1000);
    document.cookie = cookieName+"="+encodeURI(cookieValue) + ";expires="+expire.toGMTString();
}

function readcookie(cookieName) {
    let name = cookieName + "=";
    let decodedCookie = decodeURIComponent(document.cookie);
    let ca = decodedCookie.split(';');
    for(let i = 0; i <ca.length; i++) {
        let c = ca[i];
        while (c.charAt(0) == ' ') {
          c = c.substring(1);
        }
        if (c.indexOf(name) == 0) {
          return c.substring(name.length, c.length);
        }
    }
    return "";
}
  
// referrer 
 const prevUrl = document.referrer; 
 
 if(prevUrl) {
   //console.log("referrer: "+prevUrl);
   //document.querySelector("input[data-name='referrer']").value=prevUrl;
   setcookie('c_referrer',prevUrl,1);
 }
  
setTimeout(function(){ 
  let var_referrer = readcookie('c_referrer');
  //console.log('cookie_referrer: '+var_referrer);
  if(var_referrer != ""){    
   document.querySelector("input[data-name='referrer']").value=var_referrer;
  }
}, 500);

const close_banner = document.querySelector("#close_b");
const main_menu = document.querySelector("#main_menu");
const banner = document.querySelector("#banner_enterprise_resources");
const menu_mobile = document.querySelector("#menu-mobile");
const menu_mobile_cont = document.querySelector(".navbar-no-shadow-2");  
const mesh_mobile = document.querySelector(".mesh_down");
const mesh_particles = document.querySelector(".div_mesh_particles");
  
//verificamos si ya existe la hay cookie c_banner
let var_banner = readcookie('c_banner');
if(var_banner != ""){
    banner.style.display = 'none';
    main_menu.style.top = '0';
    menu_mobile_cont.style.top = '0';
    menu_mobile.style.top = '0';
}      

//evento click
close_banner &&
close_banner.addEventListener("click", function(evento){
    setcookie('c_banner',1,7);
    banner.style.display = 'none'; 
    main_menu.style.top = '0';
    menu_mobile_cont.style.top = '0';
    menu_mobile.style.top = '0'; 
});
