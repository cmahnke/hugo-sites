var hiddenInput = function(name, value) {
    var input = document.createElement("input");
    input.type = "hidden";
    input.name = name;
    input.value = value;
   // console.log(input);
    return input;
}

var newsletter_form = document.querySelector('form._form._form_3');

if (newsletter_form) {
    newsletter_form.appendChild(hiddenInput("Category", "Form submission"));
    newsletter_form.appendChild(hiddenInput("Action", "signup-newsletter"));
}
