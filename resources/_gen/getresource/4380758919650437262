window.addEventListener("load", function(event) {
    const linksSidebar = document.querySelectorAll(".nav-wrapper .sub-link-wrapper .sub-link-nav");
	const linksSidebarActives = document.querySelectorAll(".nav-wrapper .sub-link-wrapper .sub-link-nav");
	const linksMenuSidebar = document.querySelectorAll(".navbar-runbook-mobile .nav-dropdown-link-2");
    const linksMenuPrincipal = document.querySelectorAll(".navigation__runbook .link-nav-header .link-nav-open");
   
    for (const link of linksSidebar) {
        link.addEventListener("click", clickToScroll);
    }
  
    for (const linkRunbook of linksMenuSidebar) {
         linkRunbook.addEventListener("click", clickToScrollR);
    }
    for (const linkPrincipal of linksMenuPrincipal) {
         linkPrincipal.addEventListener("click", clickToScroll);
    }

    function clickToScroll(e) {
        e.stopPropagation();
        e.preventDefault();
        var parentPathname = window.location.pathname
        var parentLink = this.dataset.parent;
        const href = this.dataset.ref;
        console.log(parentPathname,parentLink, href)

        if( parentPathname !=  parentLink){
            console.log('is othe url')
            window.location.hash = href;
            window.location.pathname = parentLink;
        } else {

            for (const linkRemove of linksSidebarActives) {
                linkRemove.classList.remove('active');
            }
            this.classList.add('active');
            const href = this.dataset.ref;
            const offsetTop = document.querySelector('#'+href).offsetTop-15;

            console.log(href, offsetTop)

            scroll({
                top: offsetTop,
                behavior: "smooth"
            }); 
         }        
    }
  	function clickToScrollR(e) {
        e.stopPropagation();
        e.preventDefault();
        var parentPathname = window.location.pathname
        var parentLink = this.dataset.parent;
        const href = this.dataset.ref;
        console.log(parentPathname,parentLink, href)

        if( parentPathname !=  parentLink){
            console.log('is othe url')
            window.location.hash = href;
            window.location.pathname = parentLink;
        } else {
          	console.log( document.querySelector('#'+href) )
            console.log( document.querySelector('#'+href).offsetTop  )
            const offsetTop = document.querySelector('#'+href).offsetTop-15;
            console.log(href, offsetTop)
            scroll({
                top: offsetTop,
                behavior: "smooth"
            });        
            document.querySelector('.navbar-runbook-mobile .w-nav-button').click()
        }
    }  
 	var headerIconsMenu = document.querySelectorAll('.link-nav-header .nav-dropdown-icon-desktop')
    for (const headerMenu of headerIconsMenu) {
        
        headerMenu.addEventListener("click", function(element){
            element.preventDefault()
            element.stopPropagation()
            if(element.target.parentElement.parentElement.classList.contains('open')){
                element.target.parentElement.parentElement.classList.remove('open')
            } else {
                closeHeaders()
                element.target.parentElement.parentElement.classList.toggle('open')
            }
        })
    }

    function closeHeaders() {
        var headerIconsMenu = document.querySelectorAll('.navigation__runbook .link-nav-header')
        for (const headerMenu of headerIconsMenu) {
            headerMenu.classList.remove('open')
        }
        var sublinks = document.querySelectorAll('.navigation__runbook .sub-link-wrapper')
        for (const sublink of sublinks) {
            sublink.style.display = 'none'
        }
        var sublinksCurrent = document.querySelectorAll('.navigation__runbook .w--current')
        for (const sublinkCurrent of sublinksCurrent) {
            sublinkCurrent.classList.remove('w--current')
        }
    }
  if(window.location.hash != ''){
    
    
        var hashLink = window.location.hash.substring(1)
        
        console.log(hashLink)
        if(window.location.pathname == '/runbook/linkerd-runbook'){
           if(window.innerWidth > 991){
                var welcome = document.querySelector('#welcome').clientHeight
                var runbook_header = document.querySelector('.runbook_header').clientHeight
                var header = document.querySelector('.header').clientHeight
                var offset = welcome + runbook_header + header - 100
            } else {
                var welcome = document.querySelector('#welcome').clientHeight
                var runbook_header = document.querySelector('.navbar-wrapper-2').clientHeight
                var header = document.querySelector('.menu-button-2').clientHeight
                var offset = welcome + runbook_header + header - 65
            }

            scroll({
                top: offset ,
                behavior: "smooth"
            });
        }  else {
            setTimeout(function(){
                document.querySelector('.sub-link-nav[data-ref="'+hashLink+'"]').click()
            },100)
        }
    }

    var isFirstMenu  = document.querySelector('.nav-guide-runbook')
    if(isFirstMenu) {
        isFirstMenu.addEventListener('click', function(e){
            e.preventDefault()
            e.stopPropagation()
            // same url
            if(window.location.pathname == '/runbook/linkerd-runbook'){
                 var welcome = document.querySelector('#welcome').clientHeight
                  var runbook_header = document.querySelector('.runbook_header').clientHeight
                  var header = document.querySelector('.header').clientHeight
                  console.log( welcome, runbook_header, header)
                  console.log( welcome + runbook_header + header -80)
                  var offset = welcome + runbook_header + header -80 
                  scroll({
                      top: offset ,
                      behavior: "smooth"
                  });
            } else {
                var href = isFirstMenu.dataset.parent
                var hash = isFirstMenu.dataset.ref
                console.log(isFirstMenu)
                console.log(isFirstMenu.dataset)
                window.location.hash = hash
                window.location.pathname = href
            }
        })
    }
  var isFirstMenuMob  = document.querySelector('.nav-guide-runbookmob')
    if(isFirstMenuMob) {
        isFirstMenuMob.addEventListener('click', function(e){
            e.preventDefault()
            e.stopPropagation()
            // same url
            if(window.location.pathname == '/runbook/linkerd-runbook'){
                var welcome = document.querySelector('#welcome').clientHeight
                var runbook_header = document.querySelector('.navbar-wrapper-2').clientHeight
                var header = document.querySelector('.menu-button-2').clientHeight
                var offset = welcome + runbook_header + header - 65
                scroll({
                    top: offset,
                    behavior: "smooth"
                });
                // close modal
                document.querySelector('.navbar-runbook-mobile .w-nav-button').click()
            } else {
                var href = isFirstMenuMob.dataset.parent
                var hash = isFirstMenuMob.dataset.ref
                console.log(isFirstMenuMob)
                console.log(isFirstMenuMob.dataset)
                window.location.hash = hash
                window.location.pathname = href
            }
        })
    }

var pathname = window.location.pathname;
console.log(pathname);

if(pathname == "/cloud" || pathname == "/linkerd-support"){
	var menu = document.getElementById('w-dropdown-toggle-0');
	menu.style.backgroundColor = '#0067c4';
}

if(pathname == "/service-mesh-manifesto" || pathname == "/linkerd-vs-istio" || pathname == "/mtls-guide" || pathname == "/runbook/linkerd-runbook" || pathname == "/case-studies"){
	var menu = document.getElementById('w-dropdown-toggle-1');
	menu.style.backgroundColor = '#0067c4';
}

if(pathname == "/service-mesh-academy"){
	var menu = document.getElementById('w-dropdown-toggle-2');
	menu.style.backgroundColor = '#0067c4';
}

if(pathname == "/about-us" || pathname == "/contact" || pathname == "/contact" || pathname == "/newsroom"){
